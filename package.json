        "coveragePathIgnorePatterns": [
            "<rootDir>/test/fixtures/"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ],
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./test/jest.setup.js"
        ]
    }
