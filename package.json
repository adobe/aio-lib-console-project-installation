        "lint:check": "eslint --ext .js .",
        "lint:fix": "eslint --ext .js --fix .",
        "jsdoc": "jsdoc2md -t ./docs/readme_template.md src/**/*.js > README.md"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adobe/aio-lib-console-project-installation.git"
    },
    "author": "Adobe Inc.",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/adobe/aio-lib-console-project-installation/issues"
    },
    "homepage": "https://github.com/adobe/aio-lib-console-project-installation",
    "dependencies": {
        "@adobe/aio-cli-plugin-certificate": "^0.4.0",
        "@adobe/aio-lib-console": "^3.2.0",
        "@adobe/aio-lib-core-logging": "^1.2.0",
        "@adobe/aio-lib-env": "^1.1.0",
        "@adobe/aio-lib-ims": "^4.3.0",
        "ajv": "^8.11.0",
        "axios": "^0.27.2",
        "fs-extra": "^10.1.0",
        "hjson": "^3.2.2",
        "js-yaml": "^4.1.0",
        "tmp": "^0.2.1"
    },
    "engines": {
        "node": "^14 || ^16"
    },
    "devDependencies": {
        "@adobe/eslint-config-aio-lib-config": "^1.4.0",
        "@jest/globals": "^28.1.1",
        "eslint": "^7.32.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-jsdoc": "^37",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^26.6.3",
        "jest-junit": "^14.0.0",
        "jsdoc": "^3.6.10",
        "jsdoc-to-markdown": "^7.1.1",
        "nock": "^13.2.6"
    },
    "main": "src/index.js",
    "jest": {
        "rootDir": ".",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "collectCoverage": true,
        "testPathIgnorePatterns": [
            "<rootDir>/test/fixtures/"
