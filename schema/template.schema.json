{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://adobe.io/schemas/app-builder-templates/installation-schema/1",
  "type": "object",
  "properties": {
    "$schema": {
      "$ref": "#/definitions/$schema"
    },
    "$id": {
      "$ref": "#/definitions/$id"
    },
    "categories": {
      "$ref": "#/definitions/categories"
    },
    "extensions": {
      "$ref": "#/definitions/extensions"
    },
    "env": {
      "$ref": "#/definitions/env"
    },
    "workspaces": {
      "$ref": "#/definitions/workspaces"
    },
    "apis": {
      "$ref": "#/definitions/apis"
    },
    "runtime": {
      "$ref": "#/definitions/runtime"
    },
    "event": {
      "$ref": "#/definitions/event"
    }
  },
  "required": [
    "$schema",
    "$id",
    "categories"
  ],
  "additionalProperties": false,
  "definitions": {
    "$schema": {
      "type": "string"
    },
    "$id": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "categories/1#"
      }
    },
    "extensions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/extension"
      }
    },
    "extension": {
      "type": "object",
      "properties": {
        "extensionPointId": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "required": [
        "extensionPointId"
      ]
    },
    "env": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "workspaces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "apis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code"
        ],
        "properties": {
          "code": {
            "type": "string"
          }
        }
      }
    },
    "runtime": {
      "type": "boolean"
    },
    "event": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^consumer$": {
          "$ref": "#/definitions/consumer"
        },
        "^provider$": {
          "$ref": "#/definitions/provider"
        }
      }
    },
    "consumer": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "provider": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "provider": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "event-types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
